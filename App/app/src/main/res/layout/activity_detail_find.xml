    <TextView
        android:id="@+id/detail_find_gender"
        android:layout_width="200sp"
        android:layout_height="34dp"
        android:layout_marginStart="3dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView54"
        app:layout_constraintTop_toBottomOf="@+id/detail_find_farColor1" />

    <TextView
        android:id="@+id/detail_find_age"
        android:layout_width="100sp"
        android:layout_height="34dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="77dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView51"
        app:layout_constraintTop_toBottomOf="@+id/detail_find_time" />

    <TextView
        android:id="@+id/textView57"
        android:layout_width="100sp"
        android:layout_height="34dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:background="#eff3f7"
        android:gravity="center"
        android:text="카카오톡 Id"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView36" />

    <TextView
        android:id="@+id/textView56"
        android:layout_width="100sp"
        android:layout_height="34dp"
        android:layout_marginStart="28dp"
        android:background="#eff3f7"
        android:gravity="center"
        android:text="추정 품종"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView54" />

    <TextView
        android:id="@+id/textView55"
        android:layout_width="100sp"
        android:layout_height="34dp"
        android:layout_marginStart="28dp"
        android:background="#eff3f7"
        android:gravity="center"
        android:text="특징"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView56" />

    <TextView
        android:id="@+id/textView54"
        android:layout_width="100sp"
        android:layout_height="34dp"
        android:layout_marginStart="28dp"
        android:background="#eff3f7"
        android:gravity="center"
        android:text="성별"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView53" />

    <TextView
        android:id="@+id/textView53"
        android:layout_width="100sp"
        android:layout_height="34dp"
        android:layout_marginStart="28dp"
        android:background="#eff3f7"
        android:gravity="center"
        android:text="색상"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView51" />

    <TextView
        android:id="@+id/detail_find_time"
        android:layout_width="280dp"
