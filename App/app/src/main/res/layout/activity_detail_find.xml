        android:layout_marginTop="12dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView57"
        app:layout_constraintTop_toBottomOf="@+id/textView36" />

    <TextView
        android:id="@+id/detail_find_feature"
        android:layout_width="276dp"
        android:layout_height="59dp"
        android:layout_marginStart="3dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView55"
        app:layout_constraintTop_toBottomOf="@+id/detail_find_specify" />

    <TextView
        android:id="@+id/detail_find_specify"
        android:layout_width="200sp"
        android:layout_height="34dp"
        android:layout_marginStart="3dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView56"
